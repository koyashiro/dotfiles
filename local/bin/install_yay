#!/usr/bin/env sh

set -eu

# Distribution checking
readonly DISTRO="$(cat /etc/os-release | sed -rn 's/^NAME="(.*)"$/\1/p')"
if [ "$DISTRO" != 'Arch Linux' ] || ! command -v pacman >/dev/null 2>&1; then
  echo 'error: This distribution is not Arch Linux.' 1>&2
  exit 1
fi

# Yay checking
if command -v yay >/dev/null 2>&1; then
  echo 'error: `yay` is already installed.' 1>&2
  exit 1
fi

# Git checking
if ! command -v git >/dev/null 2>&1; then
  echo 'error: `git` is not installed.' 1>&2
  exit 127
fi

# base-devel checking
if [ "$(pacman -Sg base-devel)" != "$(pacman -Qg base-devel)" ]; then
  echo 'error: `base-devel` is not installed.' 1>&2
  exit 127
fi

# Work directory checking
readonly WORK_DIR=~/yay
if [ -e "$WORK_DIR" ]; then
  echo 'error: `'"$WORK_DIR"'` already exists.' 1>&2
  exit 1
fi

# Clone and install yay
readonly YAY_REPO_URL=https://aur.archlinux.org/yay.git
echo "[install_yay] Cloning yay...."
git clone $YAY_REPO_URL "$WORK_DIR"

cd "$WORK_DIR"
echo '[install_yay] Installing yay....'
makepkg -si
cd

# Remove work directory
echo "[install_yay] Removing $WORK_DIR...."
rm -rf $WORK_DIR

echo '[install_yay] Installation complete.'

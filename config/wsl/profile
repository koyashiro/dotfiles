if [ ! -f /proc/sys/fs/binfmt_misc/WSLInterop ]; then
  return
fi

PATH="${XDG_DATA_HOME:-$HOME/.local/share}"/wsl/bin:"$PATH"
DISPLAY="$(grep nameserver </etc/resolv.conf | awk '{print $2}')":0

export PATH
export DISPLAY

if command -v genie >/dev/null 2>&1 && [ -z "$INSIDE_GENIE" ]; then
  exec genie -s
fi

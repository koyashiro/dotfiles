[include]
	# path = ${XDG_CONFIG_HOME:-$HOME/.config}/git/config.user
	path = config.user
[core]
	editor = vim -c 'set fenc=utf-8'
	autoCRLF = false
	quotepath = false
	pager = delta
	whitespace = cr-at-eol
	eol = lf
[merge]
	ff = false
[push]
	default = current
[pull]
	ff = only
[color]
	ui = auto
[alias]
	st = status
	sts = status --short
	co = checkout
	sw = switch
	swc = switch -c
	rs = restore
	rss = restore --staged
	br = branch
	brd = branch -d
	df = diff
	ad = add
	cm = commit
	cma = commit --amend
	ft = fetch
	rb = rebase
	mg = merge
	pl = pull
	ps = push
	l = log
	lf = log --pretty=fuller
	sh = show
	cp = cherry-pick
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[fetch]
	prune = true
[delta]
	features = line-numbers decorations
	plus-color = "#012800"
	minus-color = "#340001"
	syntax-theme = OneHalfDark
[interactive]
	diffFilter = delta --color-only

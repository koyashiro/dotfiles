root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*.ps1]
indent_style = space
indent_size = 2

[{.vimrc,*.vim}]
indent_style = space
indent_size = 2

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash,zsh}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.ps1]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 2

[*.md]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.json]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.{yml,yaml}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

